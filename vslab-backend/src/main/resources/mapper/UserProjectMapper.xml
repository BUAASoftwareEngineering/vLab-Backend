<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.nocturne.vslab.backend.mapper.UserProjectMapper">

    <!-- public void bindProjectToUser(@Param("userId") Integer userId, @Param("projectId") Integer projectId); -->
    <insert id="bindProjectToUser">
        INSERT INTO tb_user_project (user_id, project_id) VALUES (#{userId}, #{projectId})
    </insert>

    <!-- public void unbindProjectFromUser(@Param("userId") Integer userId, @Param("projectId") Integer projectId); -->
    <delete id="unbindProjectFromUser">
        DELETE FROM tb_user_project
        WHERE user_id = #{userId} AND project_id = #{projectId}
    </delete>

    <!-- public List<Integer> getHoldersOfProjects(Integer projectId); -->
    <select id="getHoldersOfProjects">
        SELECT user_id
        FROM tb_user_project
        WHERE project_id = #{projectId}
    </select>

</mapper>